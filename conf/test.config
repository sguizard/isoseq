/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/isoseq -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = 6.GB
    max_time   = 6.h

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    // input  = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/samplesheet/samplesheet_test_illumina_amplicon.csv'
    input            = '/home/sguizard/Work/Dev/github/proj-gs-iso-seq/testing'
    primers          = '/home/sguizard/Work/Dev/github/proj-gs-iso-seq/testing/primers.fasta'
    fasta            = '/home/sguizard/Work/Dev/github/proj-gs-iso-seq/testing/Homo_sapiens.GRCh38.dna.chromosome.13_18_19.fasta'
    gtf              = '/home/sguizard/Work/Dev/github/proj-gs-iso-seq/testing/Homo_sapiens.GRCh38.104.chr.13_18_19.gtf'
    rq               = 0.9
    chunk            = 3
    require_polya    = true
    min_polya_length = 15
    run_cluster      = true
    five_prime       = 100
    splice_junction  = 10
    three_prime      = 100
    capped           = true
    ultra            = true

    // Ignore `--input` as otherwise the parameter validation will throw an error
    schema_ignore_params = 'genomes,input_paths,input'

    // Genome references
    // genome = 'R64-1-1'
}
